                                <GridView ColumnHeaderContainerStyle="{StaticResource headerStyle}">
                                    <GridView.Columns>
                                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="70"/>
                                        <GridViewColumn Header="Model" DisplayMemberBinding="{Binding Model}" Width="70"/>
                                        <GridViewColumn Header="Weight" DisplayMemberBinding="{Binding Weight}" Width="70" />
                                        <GridViewColumn Header="Battery Status" DisplayMemberBinding="{Binding BatteryStatus, StringFormat={}{0:#.##}}"  Width="100"/>
                                        <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}"  Width="100"/>
                                        <GridViewColumn Header="Current Parcel" DisplayMemberBinding="{Binding TransferdParcel}"/>
                                        <GridViewColumn Header="Current Location" DisplayMemberBinding="{Binding CurrentLocation}" />
                                    </GridView.Columns>
                                </GridView>
                            </ListView.View>
